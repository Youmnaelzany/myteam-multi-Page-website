---
import "@/styles/globals.css";
---

<header
  class="bg-Police-Blue flex justify-between items-center py-16 px-40 lg:p-10"
>
  <div class="flex gap-10 items-center justify-center">
    <img src="/images/logo.svg" alt="logo" />
    <ul class="flex gap-10">
      <li>
        <a
          href="/"
          class="hover:text-Light-Coral text-xl font-semibold text-White transition-all duration-[0.5s] cursor-pointer"
          >home</a
        >
      </li>
      <li>
        <a
          href="/about"
          class="hover:text-Light-Coral text-xl font-semibold text-White transition-all duration-[0.5s] cursor-pointer"
          >about</a
        >
      </li>
    </ul>
  </div>
  <div
    class="w-36 h-12 rounded-3xl border-White border-2 border-solid flex justify-center items-center hover:bg-White text-xl font-semibold text-White hover:text-Dark-Green transition-all duration-[0.5s] cursor-pointer"
  >
    <a href="/contact" class="">contact us</a>
  </div>
</header>
